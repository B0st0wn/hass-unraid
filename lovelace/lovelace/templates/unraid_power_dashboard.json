title: Unraid Power Center
views:
  - title: Unraid Power
    path: unraid-power
    icon: mdi:power-plug
    badges: &ref_0 []
    cards: &ref_6
      - &ref_1
        type: grid
        title: UPS Overview
        columns: 3
        square: false
        cards:
          - type: tile
            entity: sensor.nas_ups_status
            name: UPS Status
            icon: mdi:power-plug
            vertical: false
            features_position: bottom
          - type: tile
            entity: sensor.nas_ups_load
            name: 'UPS Load '
            icon: mdi:chart-line
            color: blue
            vertical: false
            features:
              - type: trend-graph
            features_position: bottom
          - type: tile
            entity: sensor.nas_ups_load_power
            name: UPS Load Watts
            icon: mdi:flash
            color: amber
            vertical: false
            features:
              - type: trend-graph
            features_position: bottom
          - type: tile
            entity: sensor.nas_ups_battery
            name: Battery
            icon: mdi:battery-high
            color: green
            vertical: false
            features:
              - type: trend-graph
            features_position: bottom
          - type: tile
            entity: sensor.nas_ups_time_left
            name: Runtime Left
            icon: mdi:timer-outline
          - type: tile
            entity: sensor.nas_ups_nominal_power
            name: Nominal Power
            icon: mdi:flash-outline
      - &ref_3
        type: horizontal-stack
        cards:
          - type: gauge
            name: UPS Load %
            entity: sensor.nas_ups_load
            min: 0
            max: 100
            needle: true
            severity:
              green: 0
              yellow: 60
              red: 85
          - type: gauge
            name: UPS Load Watts
            entity: sensor.nas_ups_load_power
            min: 0
            max: 900
            needle: true
            severity:
              green: 0
              yellow: 550
              red: 750
      - &ref_4
        type: statistics-graph
        title: UPS Load History
        entities:
          - entity: sensor.nas_ups_load
            name: Load %
          - entity: sensor.nas_ups_load_power
            name: Load W
        chart_type: line
        stat_types:
          - mean
          - max
        period: hour
        days_to_show: 1
        hide_legend: false
      - &ref_5
        type: entities
        title: UPS Telemetry
        entities:
          - entity: sensor.nas_ups_status
          - entity: sensor.nas_ups_load
          - entity: sensor.nas_ups_load_power
          - entity: sensor.nas_ups_battery
          - entity: sensor.nas_ups_time_left
          - entity: sensor.nas_ups_nominal_power
        state_color: true
        show_header_toggle: false
      - &ref_2
        type: conditional
        conditions:
          - entity: sensor.nas_ups_load
            condition: numeric_state
            above: 85
        card:
          type: markdown
          content: |-
            ⚠️ **UPS Load Critical**  
            Load exceeded 85%. Consider powering down unused equipment.
  - title: Unraid Power
    icon: mdi:power-plug
    badges: *ref_0
    cards: []
    type: sections
    sections:
      - type: grid
        cards:
          - *ref_1
          - *ref_2
      - type: grid
        cards:
          - type: heading
            heading: New section
          - *ref_3
          - *ref_4
      - type: grid
        cards:
          - type: heading
            heading: New section
          - *ref_5
  - title: Unraid Power
    icon: mdi:power-plug
    badges: *ref_0
    cards: *ref_6
    type: sections
    sections:
      - type: grid
        cards:
          - type: heading
            heading: New section
